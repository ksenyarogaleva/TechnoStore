@model IEnumerable<TechnoStore.WebUI.Models.Entities.Technics>

@{
    ViewBag.Title = "Admin panel: list of products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of technics</h3>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-condensed table-bordered table-hover">
            <tr>
                <th class="text-right" width="30px">ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th class="text-right">Price</th>
                <th class="text-center">Operations</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.TechnicsId</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.TechnicsId })</td>
                    <td>@item.Category.Name</td>
                    <td width="700px">@item.Description</td>
                    <td class="text-right">@item.Price.ToString("# $")</td>
                    <td class="text-center" >
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("TechnicsId", item.TechnicsId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add product", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>


